#!/bin/bash

export GOPATH=$(pwd)
export GOROOT=/usr/local/go
export PATH=$PATH:$GOROOT/bin:

(cd src/r53-ufw : glide install )
cd $GOPATH

(cd src/r53-ufw ; glide up )
cd $GOPATH

go build -i -v  -ldflags '-w -s' -o ${GOPATH}/bin/r53-ufw-client r53-ufw/client

go build -i -v  -ldflags '-w -s' -o ${GOPATH}/bin/r53-ufw-server r53-ufw/server

go build -i -v  -ldflags '-w -s' -o ${GOPATH}/bin/r53-ufw-admin r53-ufw/admin
